# RTSP-Stream Konfiguration
rtsp_stream_url=rtsp://username:password@ip:port/path

# MQTT Broker Konfiguration  
mqtt_broker_url=your-mqtt-broker.com
mqtt_broker_port=1883
mqtt_topic=katzenschreck
mqtt_username=your_mqtt_username
mqtt_password=your_mqtt_password

# Objekterkennung Konfiguration
confidence_threshold=0.5
usage_threshold=0.8

# Ignore Zone (optional) - Koordinaten als Dezimalwerte (0.0-1.0): x_min,y_min,x_max,y_max
# ignore_zone=0.1,0.1,0.3,0.3

# Datenbank Konfiguration (MariaDB/MySQL)
db_host=localhost
db_user=katzenschreck_app
db_password=123
db_database=katzenschreck
camera_name=cam_teich
